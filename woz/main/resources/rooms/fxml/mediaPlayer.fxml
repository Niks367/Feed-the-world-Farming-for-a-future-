<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<AnchorPane fx:id="mediaAnchorPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="/rooms/styles/textAreaMediaplayerStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controllers.MediaController">
    <children>
        <BorderPane fx:id="mediaBorderPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="/rooms/styles/textAreaMediaplayerStyle.css">
            <bottom>
                <VBox fx:id="buttonVBox" prefHeight="143.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
                    <children>
                  <HBox alignment="CENTER" prefHeight="85.0" prefWidth="1200.0">
                     <children>
                        <TextArea fx:id="replyText" editable="false" prefHeight="37.0" prefWidth="1264.0" stylesheets="/rooms/styles/textAreaUniStyles.css" wrapText="true" />
                     </children>
                  </HBox>
                  <HBox fx:id="textBoxReplies" alignment="CENTER" prefHeight="75.0" prefWidth="800.0">
                     <children>
                                <Label fx:id="replyLabel" alignment="CENTER" prefHeight="19.0" prefWidth="1220.0" stylesheets="/rooms/styles/textAreaUniStyles.css" text="Choose an answer" />
                     </children>
                  </HBox>
                        <HBox fx:id="buttonBox" alignment="CENTER" prefHeight="85.0" prefWidth="800.0" spacing="20.0">
                            <children>
                                <Button fx:id="option1" mnemonicParsing="false" onAction="#handleAnswer" text="A" />
                                <Button fx:id="option2" mnemonicParsing="false" onAction="#handleAnswer" text="B" />
                                <Button fx:id="option3" mnemonicParsing="false" onAction="#handleAnswer" text="C" />
                                <Button fx:id="option4" mnemonicParsing="false" onAction="#handleAnswer" text="D" />
                                <Button fx:id="replayButton" mnemonicParsing="false" onAction="#handleReplay" text="Replay" />
                        <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitQuiz" text="Quit" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </bottom>
            <center>
                <MediaView fx:id="mediaMediaView" fitHeight="700.0" fitWidth="1000.0" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </children>
</AnchorPane>
